{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug app JustMyCode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [],
            "justMyCode": true,
            "stopOnEntry": false,
            "showReturnValue": true,
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Debug app (Not JustMyCode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "python": "${workspaceFolder}/.venv/bin/python"
        },
    ]
}